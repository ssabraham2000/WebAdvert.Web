
@{
    ViewData["Title"] = "Login";
}

@model WebAdvert.Web.Models.Accounts.LoginModel

<div class="row">
    <div class="col-md-7">
        <h4>Login using your email address and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">If you are not a member you can signup here</a>
        </h5>
        <hr/>
        
        <form method="post" asp-controller="Accounts" asp-action="Login">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    @*@Html.DisplayName("Remember Me")*@
                </div>
            </div>

            <button type="submit" class="btn btn-default">Login</button>
        </form>
    </div>
</div>

